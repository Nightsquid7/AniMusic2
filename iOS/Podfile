# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'iOS' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Firebase
  pod 'Firebase/Firestore'

  # Reactive
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxRealm'
  pod 'RxDataSources', '~> 4.0'
  
  # Networking
  pod 'Kingfisher'

  # Realm
  pod 'RealmSwift'
  
  # Tools
  pod 'SwiftLint'
  pod 'Then'

  target 'iOSTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'RxBlocking', '~> 5'
    pod 'RxTest', '~> 5'
  end

  target 'iOSUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
